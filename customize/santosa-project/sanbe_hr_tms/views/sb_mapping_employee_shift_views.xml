            </pivot>
        </field>
    </record> -->


    <record id="view_sb_mapping_employee_shift_search" model="ir.ui.view">
        <field name="name">sb.mapping.employee.shift.search</field>
        <field name="model">sb.mapping_employee.shift</field>
        <field name="arch" type="xml">
            <search string="Search Mapping">
                <field name="name" filter_domain="['|','|','|',('profesion','ilike',self)('shift_id.name', 'ilike', self), ('name', 'ilike', self), ('nik', 'ilike', self)]"/>
                <field name="employee_id"/>
                <field name="shift_id"/>
                <field name="branch_id"/>
                <field name="profesion" string="L. Kompetensi"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Shift Group" name="group_by_shift" context="{'group_by': 'shift_id'}"/>
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Branch" name="group_by_branch" context="{'group_by': 'branch_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sb_mapping_employee_shift" model="ir.actions.act_window">
        <field name="name">Mapping Employee Shift</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sb.mapping_employee.shift</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_sb_mapping_employee_shift_search"/>
        <field name="context">{'active_test': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Employee Shift Mapping!
            </p>
        </field>
    </record>
</odoo>