<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sb_mapping_employee_shift_tree" model="ir.ui.view">
        <field name="name">sb.mapping.employee.shift.tree</field>
        <field name="model">sb.mapping_employee.shift</field>
        <field name="arch" type="xml">
            <tree string="Employee Shift Mapping" duplicate="0" import="0" 
                decoration-muted="not active"
                sample="1" default_order="active desc">
                <field name="area_id" optional="hide"/>
                <field name="branch_id" optional="show"/>
                <field name="division_id" optional="hide"/>
                <field name="work_unit_ids" optional="hide" widget="many2many_tags"/>
                <field name="nik" optional="show"/>
                <field name="employee_id" optional="show"/>
                <field name="profesion" string="L. Kompetensi" optional="show"/>
                <field name="jabatan" optional="hide"/>
                <field name="shift_id" string="Group Shift"/>
                <field name="active" widget="boolean_toggle" optional="hide"/>
                <field name="create_date" string="Tanggal Create" optional="show"/>
                <field name="create_uid" string="User Create" optional="hide"/>
                <field name="write_uid" string="User Ubah" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_sb_mapping_employee_shift_form" model="ir.ui.view">
        <field name="name">sb.mapping.employee.shift.form</field>
        <field name="model">sb.mapping_employee.shift</field>
        <field name="arch" type="xml">
            <form string="Employee Shift Mapping"  duplicate="0" import="0">
                <sheet>
                    <field name="branch_id" invisible="1"/>
                    <field name="area_id" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" required="1" placeholder="Employee Name" options="{'no_create': True, 'no_open': False}" domain="[('wd_type', '=', 'shift')]"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="shift_id" required="1" options="{'no_create': True, 'no_open': False}" string="Group Shift"/>
                            <field name="medic" invisible="1"/>
                            <field name="nurse" string="L. Kompetensi" invisible="1"/>
                            <field name="speciality" invisible="1"/>
                            <field name="profesion" string="L. Kompetensi" readonly="1"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
