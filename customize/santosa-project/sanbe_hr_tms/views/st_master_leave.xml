<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="st_master_leave_tree_view" model="ir.ui.view">
            <field name="name">st.master.leave.tree.view</field>
            <field name="model">st.master.leave</field>
            <field name="arch" type="xml">
                <tree string="Master Cuti" class="o_tree_table">
                    <field name="name" optional="show"/>
                    <field name="code" optional="show"/>
                    <field name="area_id" optional="show"/>
                    <field name="branch_id" optional="show"/>
                    <field name="day" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- action window -->
        <record id="st_master_leave_action" model="ir.actions.act_window">
            <field name="name">Master Cuti</field>
            <field name="res_model">st.master.leave</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tidak Ada Master Cuti
                </p>
                <p>
                    Buat Baru Master Cuti
                </p>
            </field>
        </record>

        <!-- search view -->
        <record id="st_master_leave_search_view" model="ir.ui.view">
            <field name="name">st.master.leave.search.view</field>
            <field name="model">st.master.leave</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="code" />
                    <field name="area_id" />
                    <field name="branch_id" />
                    <field name="day" />
                </search>
            </field>
        </record>

        <!-- form view -->
        <record id="st_master_leave_form_view" model="ir.ui.view">
            <field name="name">st.master.leave.form.view</field>
            <field name="model">st.master.leave</field>
            <field name="arch" type="xml">
                <form string="Form Cuti">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                                <field name="area_id" options="{'no_create': True,'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="branch_ids" invisible="1"/>
                                <field name="branch_id" options="{'no_create': True,'no_create_edit': True}"/>
                                <field name="day" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>