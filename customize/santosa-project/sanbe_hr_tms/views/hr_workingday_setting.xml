<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
         <!--        View Form    -->
        <record id="hr_workingday_setting_form" model="ir.ui.view">
            <field name="name">hr.workingday.setting.form</field>
            <field name="model">hr.working.days</field>
            <field name="arch" type="xml">
                <form string="Working Day">
                    <sheet>
                        <group col="2" name="workinghour_setting" string="Working Hour Setting">
                            <group></group>
                            <group>
                                <group>
                                    <label for="islabelstate" string="Status"/>
                                    <field name="islabelstate" invisible="1"/>
                                    <div class="mr8 oe_inline">
                                    <field name="is_active" class="mr8 oe_inline"/>
                                    <label for="is_active"/>
                                    <field name="is_inactive" class="mr8 oe_inline"/>
                                    <label for="is_inactive"/>
                                    </div>
                                </group>
                            </group>
                        </group>
                        <group col="2" name="workinghour_setting">
                            <group>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="deskripsi" required="1"/>
                            </group>
                        </group>
                        <group col="2" name="workinghour_setting">
                            <group>
                                <field name="area_id" required="1"/>
                            </group>
                            <group>
                                <field name="type_hari" widget="radio" options="{'horizontal': true}"  required="1"/>
                                <!--label for="type_hari"/>
                                <field name="islabelfull" invisible="1"/>
                                <div class="mr8 oe_inline">
                                    <field name="type_hari" widget="radio" class="mr8 oe_inline"/>
                                </div-->
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="available_for" widget="many2many_tags" force_save="1" options="{'no_edit': True, 'no_create': True, 'no_open': True}" />
                            </group>
                            <group>
                                <field name="branch_ids" invisible="1"/>  
                            </group>
                            <group>  
                                <field name="total_working_hours" string="Total Jam Kerja Full Day" required="1" widget="easy_timepicker"/>
                                <label for="working_day_from" string="Full Day From"/>
                                <div for="working_day_from" class="o_row">
                                    <field name="working_day_from" required="1" placeholder="Start Days"/> to
                                    <field name="working_day_to" required="1" placeholder="End Days"/>
                                </div>
                                <label for="fullday_from"  string="Hours From"/>
                                <div for="fullday_from" class="o_row">
                                    <field name="fullday_from" widget="float_time" required="1" placeholder="Start Hours"/> to
                                    <field name="fullday_to" widget="float_time" required="1" placeholder="End Hours"/>
                                </div>
                                <field name="delay_allow"/>
                                <!--label for="isavailabel" string="Aveilable For"/>
                                <field name="isavailabel" invisible="1"/>
                                <div class="mr8 oe_inline">
                                    <field name="bu3" class="mr8 oe_inline"/>
                                    <label for="bu3"/>
                                    <field name="bu4" class="mr8 oe_inline"/>
                                    <label for="bu4"/>
                                    <field name="bu5" class="mr8 oe_inline"/>
                                    <label for="bu5"/>
                                    <field name="bu6" class="mr8 oe_inline"/>
                                    <label for="bu6"/>
                                    <field name="sbe" class="mr8 oe_inline"/>
                                    <label for="sbe"/>
                                    <field name="cwc" class="mr8 oe_inline"/>
                                    <label for="cwc"/>
                                </div-->
                            </group>
                            <group col="2">
                                <field name="total_half_hours" string="Total Jam Kerja Half Day" required="type_hari == 'fhday'" invisible="type_hari == 'fday'" widget="easy_timepicker"/>
                                <field name="working_half_from" required="type_hari == 'fhday'" string="Day of Half Day" invisible="type_hari == 'fday'" placeholder="Start Days"/>
                                <!-- di hide karena half day biasanya hanya 1 hari -->
                                <!-- <label for="working_half_from" string="Half Day From" invisible="type_hari == 'fday'"/>
                                <div for="working_half_from" class="o_row" invisible="type_hari == 'fday'">
                                    <field name="working_half_from" required="type_hari == 'fhday'" invisible="type_hari == 'fday'" placeholder="Start Days"/> to
                                    <field name="working_half_to" required="type_hari == 'fhday'" invisible="type_hari == 'fday'" placeholder="End Days"/>
                                </div> -->

                                <label for="halfday_from" string ="Hours Half Day From" invisible="type_hari == 'fday'"/>
                                <div for="halfday_from" class="o_row" invisible="type_hari == 'fday'">
                                    <field name="halfday_from" required="type_hari == 'fhday'" widget="float_time" invisible="type_hari == 'fday'" placeholder="Start Hours"/>  to
                                    <field name="halfday_to" required="type_hari == 'fhday'" widget="float_time" invisible="type_hari == 'fday'" placeholder="End Hours"/>
                                </div>
                            </group>
                        </group>
                        <group invisible="1">
                            <field name="is_tunjangan" invisible="1"/>
                        </group>
                        <group invisible="1">
                            <field name="is_ot_holiday" help="Overtime Holiday" invisible="1"/>
                        </group>
                        <group invisible="1">
                            <field name="is_ot_automatic" help="OT Otomatis" invisible="1"/>
                        </group>
                        <group col="2" invisible="1">
                            <group>
                                <field name="valid_from" invisible="1"/>
                            </group>
                            <group>
                                <field name="valid_to" invisible="1"/>
                            </group>
                        </group>
                        <notebook invisible="1">
                            <page name="overtime" string="OT Calculation">
                                <field name="overtime_ids" required="0">
                                    <tree editable="bottom">
                                        <field name="workingday_id" column_invisible="1" />
                                        <field name="ot_type" />
                                        <field name="ot_code" />
                                        <field name="ot_from" widget="easy_timepicker" />
                                        <field name="ot_to" widget="easy_timepicker" />
                                        <field name="ot_auto"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="allowance_deduction" string="Allowance - Deduction">
                                <field name="allowance_ids">
                                    <tree editable="bottom">
                                        <field name="workingday_id" column_invisible="1" />
                                        <field name="code"/>
                                        <field name="time_from" widget="easy_timepicker" />
                                        <field name="time_to" widget="easy_timepicker" />
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--   List View    -->
        <record id="hr_workingday_setting_tree" model="ir.ui.view">
            <field name="name">hr.workingday.setting.tree</field>
            <field name="model">hr.working.days</field>
            <field name="arch" type="xml">
                <tree string="Working Day">
                    <field name="area_id" readonly="1" column_invisible="1"/>
                    <field name="code" optional="show" readonly="1"/>
                    <field name="deskripsi" readonly="1"/>
                    <field name="fullday_from" readonly="1" widget="float_time" />
                    <field name="fullday_to" readonly="1" widget="float_time" />
                    <field name="halfday_from" readonly="1" widget="float_time" />
                    <field name="halfday_to" readonly="1" widget="float_time" />
                    <field name="available_for" widget="many2many_tags" optional="hide" readonly="1"/>
                </tree>
            </field>
        </record>
        <!--  Action Windows    -->
        <record id="action_hr_workingdays" model="ir.actions.act_window">
            <field name="name">Working Day</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.working.days</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Working Day
                </p>
                <p>
                    Create New Working Day
                </p>
            </field>
        </record>

    </data>
</odoo>