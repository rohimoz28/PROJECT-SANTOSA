<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="hr_sb_docter_scheduling_form" model="ir.ui.view">
            <field name="name">sb.docter.scheduling.form</field>
            <field name="model">sb.docter.scheduling</field>
            <field name="arch" type="xml">
                <form string="Surat Perintah Lembur" create="0">
                    <header>
                    </header>
                    <group string="Jadwal Praktek Dokter" name="entry_scheduling">
                        <group>
                            <field name="name" readonly="1" invisible="1" string="Nama Docter"/>
                            <field name="employee_id" string="Nama Dokter" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="emp_id" string="Employee ID"/>
                            <field name="employee_nik" string="NIK"/>
                            <field name="specialization" string="Spesialisasi"/>
                            <field name="emp_status_id" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="job_status"/>
                            <field name="sip_id" options="{'no_create': True,'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="jadwal_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"  widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Permintaan" name="overtime_request">
                            <field name="line_ids">
                                <tree editable="bottom" class="o_horizontal_shift" default_order="hari">
                                    <field name="hari"/>
                                    <field name="start_hours" widget="easy_timepicker" />
                                    <field name="end_hours" widget="easy_timepicker" />
                                    <field name="status" widget="radio" options="{'horizontal': true}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_sb_docter_scheduling_tree" model="ir.ui.view">
            <field name="name">sb.docter.scheduling.tree</field>
            <field name="model">sb.docter.scheduling</field>
            <field name="arch" type="xml">
                <tree string="Overtime Request" duplicate="false">
                    <field name="branch_id" optional="hide"/>
                    <field name="employee_nik" optional="show"/>
                    <field name="employee_id" optional="show"/>
                    <field name="specialization" optional="show"/>
                    <field name="sip_id" optional="show"/>
                    <field name="line_ids" optional="show" widget="many2many_tags" string="Jadwal Praktek" decoration-bf="line_ids.status == 'active'" decoration-muted="line_ids.status != 'active'"/>
                    <field name="job_status" optional="show"/>
                    <field name="emp_status_id" optional="show"/>
                    <field name="status" string="Status" optional="show"/>
                </tree>
            </field>
        </record>

<record id="hr_sb_docter_scheduling_search" model="ir.ui.view">
    <field name="name">sb.docter.scheduling.search</field>
    <field name="model">sb.docter.scheduling</field>
    <field name="arch" type="xml">
        <search string="Search Doctor Scheduling">
            <field name="employee_id" string="Dokter"/>
            <field name="line_ids" string="Praktek"/>
            <field name="specialization" string="Spesialisasi"/>
            <field name="sip_id" string="SIP"/>
            <group expand="1" string="Group By">
                <filter string="Dokter" name="group_dokter" domain="[]" context="{'group_by':'employee_id'}"/>
                <filter string="Spesialisasi" name="group_specialization" domain="[]" context="{'group_by':'specialization'}"/>
                <filter string="SIP" name="group_sip" domain="[]" context="{'group_by':'sip_id'}"/>
            </group>
        </search>
    </field>
</record>


        <record id="action_sb_docter_scheduling" model="ir.actions.act_window">
            <field name="name">Setting Jadwal Praktek Dokter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sb.docter.scheduling</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Pembuatan Jadwal Praktek Dokter
                </p>
            </field>
        </record>
    </data>
</odoo>

