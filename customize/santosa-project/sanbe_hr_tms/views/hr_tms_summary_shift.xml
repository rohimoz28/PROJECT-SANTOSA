<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="hr_tmsentry_summary_shift" model="ir.ui.view">
            <field name="name">hr.tmsentry.summary.shift.form</field>
            <field name="model">hr.tmsentry.summary</field>
            <field name="arch" type="xml">
                <form string="TMS Entry Summary">
                    <group>
                        <field name="id" invisible="1"/>
                        <field name="periode_from_to" readonly="True" force_save="1" string="Periode"/>
                        <field name="nik" readonly="1"/>
                        <field name="directorate_id" readonly="1" invisible="1"/>
                        <field name="hrms_department_id" readonly="1" invisible="1"/>
                        <field name="division_id" readonly="1" invisible="1"/>
                        <field name="employee_id" readonly="1"/>
                        <field name="job_id" readonly="1"/>
                        <field name="employee_group1s" ireadonly="1"/>
                    </group>
                    <notebook>
                        <page name="Attendee" string="Kehadiran">
                            <field name="tmsentry_details_ids">
                                <tree default_order='details_date' decoration-info="type == 'H'" decoration-danger="status_attendance in ['Absent']" decoration-warning="status_attendance not in ['Absent', 'Attendee'] and status_attendance" create="False" delete="False" editable="tmsentry_id.state != 'transfer_payroll'">
                                    <field name="flag" readonly="0" optional='hide'/>
                                    <field name="dayname" readonly="1"/>
                                    <field name="details_date" readonly="1"/>
                                    <field name="type" readonly="1"/>
                                    <field name="workingday_id" readonly="1"/>
                                    <field name="empgroup_id" readonly="1" column_invisible="1"/>
                                    <field name="date_in" readonly="1"/>
                                    <field name="schedule_time_in" widget="float_time" readonly="1" optional="show"/>
                                    <field name="time_in" widget="float_time" readonly="1"/>
                                    <field name="edited_time_in" widget="float_time" readonly="1"/>
                                    <field name="date_out" readonly="1"/>
                                    <field name="schedule_time_out" widget="float_time" readonly="1" optional="hide"/>
                                    <field name="time_out" widget="float_time" readonly="1"/>
                                    <field name="edited_time_out" widget="float_time" readonly="1"/>
                                    <field name="status_attendance" readonly="1" width="170px" style="max-width:200px" decoration-danger="status_attendance in ['absent']"/>
                                    <field name="status" readonly="1" width="100px" style="max-width:200px" column_invisible="1"/>
                                    <field name="tmsentry_id" column_invisible="1" readonly="1" />
                                    <field name="approval_ot_from" widget="float_time" readonly="1" optional="hide" column_invisible="1"/>
                                    <field name="approval_ot_to" widget="float_time" readonly="1" optional="hide" column_invisible="1"/>
                                    <field name="aot1" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="aot2" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="aot3" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="aot4" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="oto" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="premi_attendee" string="ASHF" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="night_shift" optional="hide" readonly="1" string="ANS1" column_invisible="1"/>
                                    <field name="night_shift2" optional="hide" readonly="1" string="ANS2" column_invisible="1"/>
                                    <field name="meal" optional="hide" readonly="1" column_invisible="1"/>
                                    <field name="is_edited" readonly="1" column_invisible="1"/>
                                    <field name="approved" readonly="status == 'done'" column_invisible="1"/>
                                    <field name="approved_by_ca" readonly="status == 'done'" column_invisible ="1"/>  
                                    <field name="remark_edit_attn" readonly="1" optional="hide"/>
                                    <field name="positive_delay" readonly="1" string="Delay"/>
                                    <!-- <button name="action_view_tms_details" type="object" string="Detail" class="fa fa-check" invisible="status == 'done'"/> -->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
    </data>
</odoo>
