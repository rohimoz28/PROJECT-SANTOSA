<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_sb_attendance_corrections_form_view" model="ir.ui.view">
            <field name="name">inherit.sb.attendance.corrections.details.form.view</field>
            <field name="model">sb.attendance.corrections</field>
            <field name="inherit_id" ref="sanbe_hr_tms.sb_attendance_corrections_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='sb_attendance_correction_details_id']" position="inside">
                    <field name="attn_correction_detail_ids" readonly="1">
                        <tree create="0" delete="0" edit="0">
                            <field name="period_id" optional="hide"/>
                            <field name="area_id" optional="hide"/>
                            <field name="branch_id" optional="hide"/>
                            <field name="directorate_id" string="Direktorat"
                                   options="{'no_open': True, 'no_create': True}" optional="hide"/>
                            <field name="hrms_department_id" string="Departemen"
                                   options="{'no_open': True, 'no_create': True}" optional="hide"/>
                            <field name="division_id" string="Divisi" options="{'no_open': True, 'no_create': True}"
                                   optional="hide"/>
                            <field name="employee_id" column_invisible="1"/>
                            <field name="nik"/>
                            <field name="name"/>
                            <!-- <field name="name" column_invisible="1"/> -->
                            <field name="job_id" string="Jabatan"/>
                            <field name="wdcode"/>
                            <field name="empgroup_id" column_invisible="1"/>
                            <field name="tgl_time_in"/>
                            <field name="time_in" widget="float_time"/>
                            <field name="edited_time_in" widget="float_time"/>
                            <field name="tgl_time_out"/>
                            <field name="time_out" widget="float_time"/>
                            <field name="edited_time_out" widget="float_time"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//notebook/page[@name='sb_attendance_not_match']" position="inside">
                    <field name="attn_loss_detail_ids" readonly="1">
                        <tree create="0" delete="0" edit="0">
                            <field name="details_date"/>
                            <field name="period_id" optional="hide"/>
                            <field name="area_id" optional="hide"/>
                            <field name="branch_id" optional="hide"/>
                            <field name="directorate_id" string="Direktorat"
                                   options="{'no_open': True, 'no_create': True}" optional="hide"/>
                            <field name="hrms_department_id" string="Departemen"
                                   options="{'no_open': True, 'no_create': True}" optional="hide"/>
                            <field name="division_id" string="Divisi" options="{'no_open': True, 'no_create': True}"
                                   optional="hide"/>
                            <field name="employee_id" column_invisible="1"/>
                            <field name="nik"/>
                            <field name="name"/>
                            <field name="job_id" string="Jabatan"/>
                            <field name="wdcode" optional="hide"/>
                            <field name="schedule_time_in" widget="float_time"/>
                            <field name="time_in" widget="float_time"/>
                            <field name="schedule_time_out" widget="float_time"/>
                            <field name="time_out" widget="float_time"/>
                            <field name="delay_minutes" widget="float_time"/>
                            <field name="positive_delay" widget="float_time" column_invisible="1"/>
                            <field name="remark" column_invisible="1"/>
                            <field name="attendance_status"/>
                            <field name="state" column_invisible="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>