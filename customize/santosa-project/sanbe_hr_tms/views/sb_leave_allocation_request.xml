<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="sb_leave_allocation_request_view_tree" model="ir.ui.view">
            <field name="name">sb.leave.allocation.reques.view.tree</field>
            <field name="model">sb.leave.allocation.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="area_id" />
                    <field name="branch_id" />
                    <field name="directorate_id"/>
                    <field name="hrms_department_id" />
                    <field name="employee_id" />
                    <field name="job_id" />
                    <field name="employee_levels" />
                    <field name="total_leave" />
                </tree>
            </field>
        </record>

        <!-- action window -->
        <record id="sb_leave_allocation_request_view_action" model="ir.actions.act_window">
            <field name="name">Leave Allocation Request</field>
            <field name="res_model">sb.leave.allocation.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Leave Allocation Request Records
                </p>
                <p>
                    Create New Leave Allocation Request Records
                </p>
            </field>
        </record>

        <!-- search view -->
        <record id="sb_leave_allocation_request_view_search" model="ir.ui.view">
            <field name="name">sb.leave.allocation.request.view.search</field>
            <field name="model">sb.leave.allocation.request</field>
            <field name="arch" type="xml">
                <search string="Leave Allocation Request">
                    <field name="area_id" />
                    <field name="branch_id" />
                    <field name="hrms_department_id" />
                    <field name="employee_id" />
                    <field name="job_id" />
                    <field name="employee_levels" />
                    <field name="total_leave" />
                </search>
            </field>
        </record>

        <!-- form view -->
        <record id="sb_leave_allocation_request_view_form" model="ir.ui.view">
            <field name="name">sb.leave.allocation.request.view.form</field>
            <field name="model">sb.leave.allocation.request</field>
            <field name="arch" type="xml">
                <form string="Leave Allocation Request Form">
                    <header>
                        <button name="btn_draft" type="object"
                            string="Draft" class="oe_highlight" invisible="state not in ['Hold','running']"/>
                        <button name="btn_running" type="object"
                           string="Running" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="btn_hold" type="object"
                           string="Hold" class="oe_highlight" invisible="state != 'running'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,running,hold"/>
                    </header>
                    <group>
                        <group>
                            <field name="area_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="branch_ids" invisible="1"/>
                            <field name="branch_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="directorate_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="hrms_department_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="division_id" options="{'no_create': True,'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="employee_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="job_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="employee_levels" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="total_leave" />
                        </group>
                    </group>
                    <notebook>
                        <page name="leave_tracking" string="Leave Tracking">
                            <field name="leave_tracking_ids" options="{'no_create': True,'no_create_edit': True}">
                                <tree string="Leave Tracking">
                                    <field name="date" />
                                    <field name="permission_date_from" />
                                    <field name="permission_date_to" />
                                    <field name="leave_master_id" options="{'no_create': True,'no_create_edit': True}"/>
                                    <field name="leave_allocation" />
                                    <field name="leave_used" />
                                    <field name="leave_remaining" />
                                    <field name="remarks" />
                                    <field name="description" />
                                    <field name="permission_status"
                                           statusbar_visible="draft,approved,close,cancel" 
                                           decoration-info="permission_status == 'draft'" 
                                           decoration-success="permission_status == 'approved'"
                                           decoration-warning="permission_status == 'close'"
                                           decoration-danger="permission_status == 'cancel'"
                                           widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page name="leave_benefit" string="Leave Entitlement">
                            <field name="leave_benfit_ids" >
                                <tree string="Benefit" editable="bottom">
                                    <field name="leave_master_id" options="{'no_create': True,'no_create_edit': True}"/>
                                    <field name="code" />
                                    <field name="description" />
                                    <field name="total_leave_balance" />
                                    <field name="notes" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
    </data>
</odoo>