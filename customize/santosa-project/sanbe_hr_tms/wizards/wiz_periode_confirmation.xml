<odoo>
    <record id="view_running_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">running.confirmation.wizard.form</field>
        <field name="model">running.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Konfirmasi Pembuatan">
                <sheet>
                    <field name="message" readonly="1"/>
                </sheet>
                <footer>
                    <button string="Lanjutkan" name="action_confirm_create" type="object" class="oe_highlight"/>
                    <button string="Batalkan" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>