<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_wiz_hr_set_draft" model="ir.ui.view">
            <field name="name">wiz.hr.set.draft.form</field>
            <field name="model">wiz.hr.set.draft</field>
            <field name="arch" type="xml">
                <form string="Set Draft">
                    <group>
                        <field name="target_models" invisible="1"/>
                        <field name="shift_id" invisible="1" options="{'no_create': True}" placeholder="Select Shifts"/>
                        <field name="reason" required="1"  placeholder="Input Reason"/>
                    </group>

                    <footer>
                        <button string="Set to Draft" type="object" name="action_set_draft" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wiz_hr_set_draft" model="ir.actions.act_window">
            <field name="name">Set Draft</field>
            <field name="res_model">wiz.hr.set.draft</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wiz_hr_set_draft"/>
            <field name="target">new</field> <!-- This opens it in a modal -->
        </record>

    </data>

</odoo>
