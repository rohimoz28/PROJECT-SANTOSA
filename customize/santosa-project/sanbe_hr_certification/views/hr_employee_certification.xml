<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_certificated_tree" model="ir.ui.view">
            <field name="name">certificate.type.tree</field>
            <field name="model">hr.employee.certification</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <tree string="HR Certificated" create="false" edit="false">
                    <field name="employee_id" column_invisible="1" />
                    <field name="name" />
                    <field name="number" />
                    <field name="certification_types_id" />
                    <field name="skill_id" string="Kompetensi"/>
                    <field name="level_skill" string="Tingkatan"/>
                    <field name="must" />
                    <field name="issuing_institution" />
                    <field name="valid_from" />
                    <field name="valid_to" />
                    <field name="certificate_attachmentids" widget="many2many_binary" />
                    <field name="remarks" />
                    <!-- <field name="notification_date" column_invisible="1" /> -->
                    <!-- <field name="active" column_invisible="1" /> -->
                </tree>
            </field>
        </record>
        <record id="view_hr_certificate_form" model="ir.ui.view">
            <field name="name">hr.employee.certification.form</field>
            <field name="model">hr.employee.certification</field>
            <field name="type">form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Certificated">
                    <header>
                        <field name="is_expired" widget="statusbar" statusbar_visible="valid,expired"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Sertifikasi"  readonly="is_expired != 'draft'"/>
                        </h1>
                        <h2>
                            <field name="number" placeholder="Nomor Sertifikasi"  readonly="is_expired != 'draft'"/>
                        </h2>
                    </div>
                    <group>
                        <field name="employee_id" force_save="1"/>
                        <!-- <field name="certification_types"/> -->
                        <field name="certification_types_id" required="1" readonly="is_expired != 'draft'"/>
                        <field name="certification_code" 
                        invisible="1"
                        readonly="is_expired != 'draft'"/>

                        <!--    
                        == kalau sertifikat berkaitan dengan skill/ kompetensi == ready to reactivate  
                        <label for="skill_id" string="Kompetensi" invisible="not skill_id"/>
                        <div class="o_row" invisible="not skill_id">
                            <field name="skill_id" string="Kompetensi" readonly="is_expired != 'draft'"/>
                            Tingkat
                            <field name="level_skill" readonly="is_expired != 'draft'"/>
                        </div> -->
                        <field name="must" readonly="is_expired != 'draft'"/>
                        <field name="level_skill" string="Tingkatan" readonly="is_expired != 'draft'"/>
                        <field name="is_long_life" invisible="(certification_code != 'nf')" readonly="is_expired != 'draft'"/>
                        <field name="issuing_institution" readonly="is_expired != 'draft'"/>
                        <label for="valid_from" string="Berlaku mulai" readonly="is_expired != 'draft'"/>
                        <div class="o_row flex-grow-1">
                            <field name="valid_from" readonly="is_expired != 'draft'"/>
                            <label for="valid_to" string="s/d" invisible="(is_long_life == True)" />
                            <field name="valid_to" required="(must == True) and (is_long_life == False)" invisible="(is_long_life == True)" readonly="is_expired != 'draft'"/>
                        </div>
                        <field name="is_dinas" 
                            readonly="is_expired != 'draft'" />
                        <label for="valid_from" string="Berlaku mulai" invisible="(is_dinas != True)"/>
                        <div class="o_row flex-grow-1" invisible="(is_dinas != True)">
                            <field name="date_from"  required="is_dinas" invisible="(is_dinas != True)" 
                            readonly="is_expired != 'draft'"/> s/d
                            <field name="date_to" required="is_dinas" invisible="(is_dinas != True)" 
                            readonly="is_expired != 'draft'"/>
                        </div>
                        <field name="certificate_attachmentids" widget="many2many_binary"/>
                        <field name="cerv_refrence" />
                        <field name="remarks"/>
                        <!-- <field name="active" invisible="1" /> -->
                        <!-- <field name="notification_date" invisible="1" /> -->

                        
                        <!-- To recreate and renew certificate  -->
                        <!-- <div class="o_row flex-grow-1">
                            <button name="renewal_certivicate" string="Re-New" type="object" invisible="is_expired != 'expired'" class="btn-secondary"/>
                            <button name="set_reactiv" string="Confirm" type="object" invisible="is_expired != 'draft'" class="btn-primary"/>
                        </div>  -->

                    </group> 
                </form>
            </field>
        </record>

        <record id="view_employee_certificate_search" model="ir.ui.view">
            <field name="name">employee.certification.search</field>
            <field name="model">hr.employee.certification</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Employee Certification">
                    <!-- Updated filter domain: removed 'self' and used proper domains -->
                    <field name="name" string="Name" filter_domain="['|','|','|','|',('name','ilike',self),('number','ilike',self),('issuing_institution','ilike',self),('employee_id.name','ilike',self)]"/>
                    
                    <field name="number"/>
                    <field name="issuing_institution"/>
                    <!-- Separator -->
                    <separator/>
                    <!-- Filters -->
                    <filter name="filter_Expired" string="Expired" domain="[('valid_to', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <!-- <filter name="filter_to_expired" string="To Expire" domain="[('notification_date','&lt;', context_today().strftime('%Y-%m-%d')),('valid_to','&gt;', context_today().strftime('%Y-%m-%d'))]"/> -->
                    <!-- <filter name="filter_Valid" string="Valid" domain="[('notification_date', '&gt;', context_today().strftime('%Y-%m-%d'))]"/> -->
                </search>
            </field>
        </record>

        <record id="open_view_employee_certificate_tree" model="ir.actions.act_window">
            <field name="name">Employees Certificate</field>
            <field name="res_model">hr.employee.certification</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_certificated_tree" />
            <field name="domain">[]</field>
            <field name="search_view_id" ref="view_employee_certificate_search" />
        </record>

        <record id="open_view_employee_list" model="ir.actions.act_window">
            <field name="name">Employees Certificate</field>
            <field name="res_model">hr.employee.certification</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" eval="False" />
            <field name="search_view_id" ref="view_employee_certificate_search" />
        </record>

        <record id="open_view_employee_draft_list" model="ir.actions.act_window">
            <field name="name">Monitoring Sirtifikat Expire</field>
            <field name="res_model">hr.employee.certification</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hr_certificated_tree" />
            <field name="domain">[('is_expired','=','draft')]</field>
            <field name="search_view_id" ref="view_employee_certificate_search" />
            <field name="context">{'create': False}</field>
        </record>

        <record id="open_view_employee_expired_list" model="ir.actions.act_window">
            <field name="name">Monitoring Sirtifikat Expire</field>
            <field name="res_model">hr.employee.certification</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hr_certificated_tree" />
            <!-- <field name="domain">[('notification_date','&lt;', context_today().strftime('%Y-%m-%d')),('active','=',True )]</field> -->
            <field name="search_view_id" ref="view_employee_certificate_search" />
            <field name="context">{'create': False}</field>
        </record>
                
        <menuitem id="hr_sanbe_certification" name="Setifikasi Karyawan" action="open_view_employee_certificate_tree" parent="hr.hr_menu_hr_reports" sequence="12"/> 
        <menuitem id="hr_sanbe_certification_expired" name="Monitoring Sirtifikat Expired" action="open_view_employee_expired_list" parent="hr.hr_menu_hr_reports" sequence="17"/>
    </data>
</openerp>