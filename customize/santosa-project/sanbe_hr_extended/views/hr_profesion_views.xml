    <record id='hr_monitoring_sip_view_tree' model='ir.ui.view'>
        <field name='name'>hr.sip.view.tree</field>
        <field name='model'>hr.sip</field>
        <field name='arch' type='xml'>
            <tree string='Surat Izin Praktek' 
            delete="false" 
            create="false"
            
            >
                <field name='sip_number' optional='show'/>
                <field name='emp_selected_id' optional='show'/>
                <field name='nik' />
                <field name='employee_id' optional='show'/>
                <field name='job_id' optional='show'/>
                <field name="specialization" optional="show"/>
                <field name='start_date' optional='show'/>
                <field name='end_date' optional='show'/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'close'" decoration-success="state == 'open'" decoration-danger="state == 'cancel'" optional="show"/>
                <field name='branch_id' optional='hide'/>
                <field name='directorate_id' optional='hide'/>
                <field name='hrms_department_id' optional='hide'/>
                <field name='division_id' optional='hide'/>
                <field name="no_sip_to" optional="hide"/>
                <field name="competence" optional="hide"/>
            </tree>
        </field>
    </record>


    <record id="action_hr_employee_sip" model="ir.actions.act_window">
        <field name="name">Monitoring SIP</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.sip</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_monitoring_sip_view_tree"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Hr Employee Contract Monitoring.
            </p>
        </field>
    </record>

    <record id="hr_sip_view_search" model="ir.ui.view">
        <field name="name">hr.sip.search</field>
        <field name="model">hr.sip</field>
        <field name="arch" type="xml">
            <search string="Search SIP">
                <field name="employee_name" string="Nama Karyawan"
                       filter_domain="['|','|',('employee_name','ilike',self),('hrms_department_id','ilike',self),('branch_id','ilike',self)]"/>
                <field name="branch_id" string="Unit Bisnis"/>
                <field name="directorate_id" string="Direktorat"/>
                <field name="hrms_department_id" string="Departemen"/>
                <group expand="1" string="Group By">
                    <filter name="group_by_department" string="Departemen"
                        domain="[]" context="{'group_by': 'hrms_department_id'}"/>
                    <filter name="group_by_jabatan" string="Jabatan"
                        domain="[]" context="{'group_by': 'job_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem id="hr_employee_monitoring_sip" name="Monitoring SIP" action="action_hr_employee_sip" parent="hr.hr_menu_hr_reports" sequence="20"/>

