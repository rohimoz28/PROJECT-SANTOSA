<odoo>
    <data>

        <record id="san_hrms_directorate_form" model="ir.ui.view">
            <field name="name">Directorate</field>
            <field name="model">sanhrms.directorate</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Direktorat" />
                            <h1>
                                <field name="name" placeholder="Nama..." nolabel="1" required='1'/>
                            </h1>
                            <h3>
                                <field name="directorate_code" placeholder="Kode..." required='1'/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id" string="Bisnis Unit" />
                                <field name="department_ids" string="Department" widget='many2many_tags'/>
                            </group>
                            <group>
                                <field name="active" string="Active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="san_hrms_directorate_tree" model="ir.ui.view">
            <field name="name">Directorate</field>
            <field name="model">sanhrms.directorate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_id" string="Unit Bisnis"  readonly="True"/>
                    <field name="directorate_code" required='1'  readonly="True"/>
                    <field name="name" string="Nama"  readonly="True"/>
                    <field name="department_ids" string="Department" widget='many2many_tags'  readonly="True"/>
                    <field name="active" string="Active"/>                           
                </tree>
            </field>
        </record>
        

        <record id="san_hrms_directorate_action" model="ir.actions.act_window">
            <field name="name">Direktorat</field>
            <field name="res_model">sanhrms.directorate</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>
       
        <menuitem id="directorate_date" name="Direktorat" sequence='3' parent="hierarchy_id" action="san_hrms_directorate_action"/>

    </data>
</odoo>