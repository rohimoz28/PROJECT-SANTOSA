<odoo>
    <data>

        <record id="san_hrms_department_form" model="ir.ui.view">
            <field name="name">Department</field>
            <field name="model">sanhrms.department</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nama..." nolabel="1"/>
                            </h1>
                            <h3>
                                <field name="department_code" placeholder="Kode..."/>
                            </h3>
                        </div>
                        <group>
                           
                            <field name="department_code" string="Kode" required='1'/>
                            <field name="name" string="Nama"/>
                            <field name="branch_id" string="Unit Bisnis"/>
                            <field name="directorate_id" string="Direktorat" domain=""  required='1'/>
                            <field name="division_ids" string="Divisi" widget='many2many_tags'/>
                            
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="san_hrms_department_tree" model="ir.ui.view">
            <field name="name">Department</field>
            <field name="model">sanhrms.department</field>
            <field name="arch" type="xml">

                <tree limit="20">
                    <field name="branch_id" string="Unit Bisnis"/>
                    <field name="department_code" required='1'/>
                    <field name="name" string="Nama" />
                    <field name="directorate_id" string="Direktorat"/>   
                    <!-- <field name="division_ids" string="Divisi"/> -->
                </tree>
                
            </field>
        </record>
        

        <record id="san_hrms_department_action" model="ir.actions.act_window">
            <field name="name">Department</field>
            <field name="res_model">sanhrms.department</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="domain"></field>

        </record>
       
        <menuitem id="department_date" name="Departmen" sequence='14' parent="hierarchy_id" action="san_hrms_department_action"/>

    </data>
</odoo>