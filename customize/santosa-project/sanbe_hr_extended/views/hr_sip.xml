<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id='hr_sip_view_tree' model='ir.ui.view'>
            <field name='name'>hr.sip.view.tree</field>
            <field name='model'>hr.sip</field>
            <field name='arch' type='xml'>
                <tree string='Surat Izin Praktek'>
                    <field name='employee_id' optional='show'/>
                    <field name='sip_number' optional='show'/>
                    <field name='start_date' optional='show'/>
                    <field name='end_date' optional='show'/>
                    <field name='sip' optional='hide'/>
                    <field name='competence' optional='hide'/>
                    <field name='no_pkwt' optional='show'/>
                    <field name='notice_day' optional='show'/>
                    <field name='state' 
                            widget='badge'
                            decoration-info="state == 'draft'" 
                            decoration-warning="state == 'close'" 
                            decoration-success="state == 'open'"
                            decoration-danger="state == 'cancel'"
                            optional='show'/>
                </tree>
            </field>
        </record>
        <!-- action window -->
        <record id='hr_sip_action' model='ir.actions.act_window'>
            <field name='name'>Surat Izin Praktek</field>
            <field name='res_model'>hr.sip</field>
            <field name='view_mode'>tree,form</field>
            <field name='view_id' ref='hr_sip_view_tree'/>
        </record>
        <!-- form view -->
        <record id='hr_sip_form' model='ir.ui.view'>
            <field name='name'>hr.sip.form</field>
            <field name='model'>hr.sip</field>
            <field name='arch' type='xml'>
                <form string='Form Surat Izin Praktek'>
                    <header>
                        <field name='state' widget='statusbar' options="{'clickable': '1'}"/>
                    </header>
                    <div class="oe_title pe-0 w-100 mw-100" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="sip_number" class="text-truncate" placeholder="Nomor SIP"/>
                        </h1>
                        <!-- <h2>
                            <field name="contract_type_id" placeholder="Tipe Kontrak" options="{'no_create': True,'no_create_edit': True}" nolabel="1"/>
                        </h2> -->
                        <h2>
                        </h2>
                    </div>   
                    <group name="top_info">
                        <group name="top_info_left">
                            <field name='employee_id'/>
                            <field name='emp_selected_id' 
                            options="{'no_create': True,'no_create_edit': True}" 
                            context="{'search_by': 'No','search_by_name': False}"
                            force_save="1"/>
                            <field name='nik' force_save="1"/>
                            <field name='nik_lama' force_save="1"/>
                            <field name='area' force_save="1"/>
                            <field name='department_id' force_save="1"/>
                            <field name='directorate_id' force_save="1"/>
                            <field name='division_id' force_save="1"/>
                            <field name='branch_id' string='Unit Bisnis' force_save="1"/>
                            <field name='job_id' force_save="1"/>
                        </group>
                        <group name="top_info_right">
                            <field name='sip' force_save="1"/>
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="no_pkwt" />
                            <!-- <field name="company_id" string="Nama Perusahaan" force_save="1"/> -->
                            <label for="sip_day" string="Periode SIP"/>
                            <div class="o_row">
                                <label for="sip_year" string="Tahun"/>
                                <div>
                                    <field name="sip_year" force_save="1"/>
                                </div>
                                <label for="sip_month" string="Bulan"/>
                                <div>
                                    <field name="sip_month" force_save="1"/>
                                </div>
                                <label for="sip_day" string="Hari"/>
                                <div>
                                    <field name="sip_day" force_save="1"/>
                                </div>
                            </div>
                            <field name="contract_counts" />
                            <field name="attachment_contract" widget="many2many_binary"/>
                            <label for="notice_day" string="Periode Notifikasi"/>
                            <div class="o_row">
                                <field name="notice_day"/>
                                <span>Hari</span>
                            </div>
                            <!-- <field name="structure_type_id" string="Jenis Struktur Gaji" force_save="1"/> -->
                            <!-- <field name="salary_amount"/> -->
                            <field name="specialization"/>
                            <field name="professional_title"/>
                            <field name='competence'/>
                        </group>
                    </group>
                    <group name="bottom_info" string="Catatan">
                        <field name="notes" nolabel="1" colspan="2" placeholder="Ketik catatan tentang kontrak ini..."/>
                    </group> 
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>