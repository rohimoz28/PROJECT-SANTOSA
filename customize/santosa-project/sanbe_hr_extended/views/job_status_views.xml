<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View job.status View Tree -->
    <record id="view_job_status_tree" model="ir.ui.view">
        <field name="name">view.job.status.tree</field>
        <field name="model">sanhrms.job.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="branch_id" string="Unit Bisnis"/>
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- View job.status form -->
    <record id="view_job_status_form" model="ir.ui.view">
        <field name="name">view.job.status.form</field>
        <field name="model">sanhrms.job.status</field>
        <field name="arch" type="xml">
            <form string="Job Status">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nama"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="Code"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="type" string="Tipe"/>
                            <field name="branch_id" string="Unit Bisnis"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View job.status search -->
    <record id="view_job_status_search" model="ir.ui.view">
        <field name="name">view.job.status.search</field>
        <field name="model">sanhrms.job.status</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Type" name="type" domain="[]" context="{'group_by':'type'}"/>
                    <filter string="Unit Bisnis" name="branch_id" domain="[]" context="{'group_by':'branch_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action job.status -->
    <record id="action_job_status" model="ir.actions.act_window">
        <field name="name">Job Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sanhrms.job.status</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Job Status.
            </p>
        </field>
    </record>

    <!-- Menu item job.status -->
    <menuitem id="job_status_id" name="Status Pekerja" sequence='16' action="action_job_status" parent="hr.menu_human_resources_configuration"/>
</odoo>
