<odoo>
    <data>

        <record id="san_hrms_division_form" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Divisi" />
                            <h1>
                                <field name="name" placeholder="Nama..." nolabel="1" required='1'/>
                            </h1>
                            <h3>
                                <field name="division_code" placeholder="Kode..." required='1'/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id" string="Bisnis Unit"/>
                                <field name="department_id" string="Departmen" required='1' domain="['|',('branch_id','=',branch_id),('branch_id','=',False)]"/>
                                <field name="department_code" string="Departmen Kode" invisible="1"/>
                            </group>
                            <group>
                                <field name="active" string="Active"/>                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="san_hrms_division_tree" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_id" string="Unit Bisnis"/>
                    <field name="division_code" string="Kode" required='1' readonly="True"/>
                    <field name="name" string="Nama"  readonly="True"/>
                    <field name="department_id" string="Departmen"  readonly="True"/>
                    <field name="department_code" string="Departmen Kode" column_invisible="1"/>
                    <field name="active" string="Active"/>                            
                </tree>
            </field>
        </record>
        

        <record id="san_hrms_division_action" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="res_model">sanhrms.division</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>
       
        <menuitem id="division_date" name="Divisi" sequence='15' parent="hierarchy_id" action="san_hrms_division_action"/>
    </data>
</odoo>