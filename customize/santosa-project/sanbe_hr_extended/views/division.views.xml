<odoo>
    <data>

        <record id="san_hrms_division_form" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                           
                            <field name="division_code" string="Kode" required='1'/>
                            <field name="name" string="Nama" />
                            <field name="branch_id" string="Bisnis Unit"/>
                            <field name="department_id" string="Departmen"/>
                            
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="san_hrms_division_tree" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">

                <tree limit="20">
                    <field name="division_code" string="Kode" required='1'/>
                    <field name="name" string="Nama" />
                    <field name="branch_id" string="Bisnis Unit"/>
                    <field name="department_id" string="Departmen"/>
                            
                </tree>
            </field>
        </record>
        

        <record id="san_hrms_division_action" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="res_model">sanhrms.division</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="domain"></field>       
        </record>
       
        <menuitem id="division_date" name="Divisi" sequence='15' parent="hierarchy_id" action="san_hrms_division_action"/>
    </data>
</odoo>