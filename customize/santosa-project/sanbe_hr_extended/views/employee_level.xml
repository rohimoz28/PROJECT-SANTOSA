<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="employee_level_form" model="ir.ui.view">
            <field name="name">employee.level.form</field>
            <field name="model">employee.level</field>
            <field name="arch" type="xml">
                <form string="Months Name">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1"
                                    placeholder="Nama" />
                            </h1>
                            <h3>
                                <field name="code" placeholder="Kode" />
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id" string="Unit Bisnis"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_level_tree" model="ir.ui.view">
            <field name="name">employee.level.tree</field>
            <field name="model">employee.level</field>
            <field name="arch" type="xml">
                <tree string="Employee Level Name">
                    <field name="branch_id" string="Unit Bisnis" optional="show"/>
                    <field name="code" string="Kode" optional="show"/>
                    <field name="name" string="Nama" optional="show" />
                </tree>
            </field>
        </record>

        <record id="action_employee_level" model="ir.actions.act_window">
            <field name="name">Level Karyawan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.level</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Report Employee Level
                </p>
                <p>
                    Create new Employee Level
                </p>
            </field>
        </record>

        <menuitem id="hierarchy_id" name="Hirarki" sequence='16' parent="hr.menu_human_resources_configuration"/>
        <menuitem id="profesion_id" name="Profesi" sequence='30' parent="hr.menu_human_resources_configuration"/>
        <menuitem id="employee_level_id" name="Level Karyawan" sequence='80' parent="hierarchy_id" action="action_employee_level"/>
    </data>
</odoo>