<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- View emp.group View Tree -->
    <record id="view_emp_group_tree" model="ir.ui.view">
        <field name="name">view.emp.group.tree</field>
        <field name="model">emp.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nama"/>
                <field name="responsible_id" string="Penanggung Jawab"/>
            </tree>
        </field>
    </record>

        <!-- View emp.group search -->
        <record id="view_emp_group_search" model="ir.ui.view">
            <field name="name">view.emp.group.search</field>
            <field name="model">emp.group</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="1" string="Group By">
                        <filter string="Nama" name="name" domain="[]" context="{'group_by':'name'}"/>
                        <filter string="Penanggung Jawab" name="responsible_id" domain="[]" context="{'group_by':'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action emp.group -->
        <record id="action_emp_group" model="ir.actions.act_window">
            <field name="name">Grup</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">emp.group</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Emp Group.
                </p>
            </field>
        </record>
        
        <menuitem id="emp_group" name="Group Pegawai" sequence='20' parent="hierarchy_id" action="action_emp_group"/>
        
    
        <record id="view_emp_group_service_tree" model="ir.ui.view">
            <field name="name">view.mst.group.pelayanan.tree</field>
            <field name="model">mst.group.pelayanan</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" editable="bottom">
                    <field name="code" string="Kode Group Pelayanan"/>
                    <field name="name" string="Group Pelayanan"/>
                    <field name="create_date" string="Create Date"/>
                    <field name="write_date" string="Last Update"/>
                    <field name="write_uid" string="Write User"/>
                    <field name="active" string="Active"/>
                    <!-- <field name="sub_ids" string="Sub Group Pelayanan" widget="many2many_tags"/> -->
                </tree>
            </field>
        </record>

        <record id="view_emp_group_service_form" model="ir.ui.view">
            <field name="name">view.mst.group.pelayanan.form</field>
            <field name="model">mst.group.pelayanan</field>
            <field name="arch" type="xml">
                <form string="Mst Group Pelayanan">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Group Pelayanan"/>
                            <h1>
                                <field name="name" placeholder="Nama..."/>
                            </h1>
                            <label for="code" string="Kode Group Pelayanan"/>
                            <h3>
                                <field name="code" placeholder="Kode..."/>
                            </h3>
                        </div>
                        <group>
                            <field name="sub_ids" invisible ="not sub_ids" string="Sub Group Pelayanan" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>

        <record id="action_emp_group_service" model="ir.actions.act_window">
            <field name="name">Group Pelayanan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mst.group.pelayanan</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                        There is no examples click here to add new Emp Group Service.
                </p>
            </field>
        </record>
        <menuitem id="empoyee_group" name="Pelayanan" sequence='16' parent="hr.menu_human_resources_configuration"/>        
        <menuitem id="emp_group_service" name="Group Pelayanan" sequence='21' parent="empoyee_group" action="action_emp_group_service"/>
        
         <record id="view_emp_sub_group_service_tree" model="ir.ui.view">
            <field name="name">view.mst.sub.group.pelayanan.tree</field>
            <field name="model">mst.sub.group.pelayanan</field>
            <field name="arch" type="xml">
                <tree delete="false" duplicate="false" editable="bottom">
                    <field name="mst_id" string="Mst Group Pelayanan" options="{'no_create': True,'no_create_edit':True}" column_invisible="1"/>
                    <field name="code" string="Kode Sub Grup Pelayanan"/>
                    <field name="name" string="Sub Group Pelayanan"/>
                    <field name="create_date" string="Create Date"/>
                    <field name="write_date" string="Last Update"/>
                    <field name="write_uid" string="Write User"/>
                    <field name="active" string="Active"/>
                </tree>
            </field>
        </record>

        <record id="view_emp_sub_group_service_form" model="ir.ui.view">
            <field name="name">view.mst.sub.group.pelayanan.form</field>
            <field name="model">mst.sub.group.pelayanan</field>
            <field name="arch" type="xml">
                <form string="Sub Group Pelayanan">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Group Pelayanan"/>
                            <h1>
                                <field name="name" placeholder="Nama..."/>
                            </h1>
                            <label for="code" string="Kode Group Pelayanan"/>
                            <h3>
                                <field name="code" placeholder="Kode..."/>
                            </h3>
                        </div>
                        <!-- <group>
                            <field name="mst_id" string="Mst Group Pelayanan"/>
                        </group> -->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_emp_sub_group_service_search" model="ir.ui.view">
            <field name="name">view.mst.sub.group.pelayanan.search</field>
            <field name="model">mst.sub.group.pelayanan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Name" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Nama" name="name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_emp_sub_group_service" model="ir.actions.act_window">
            <field name="name">Sub Group Pelayanan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mst.sub.group.pelayanan</field>
            <field name="view_mode">tree</field>
            <!-- <field name="view_mode">tree,form</field> -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                        There is no examples click here to add new Sub Group Employee Service.
                </p>
            </field>
        </record>

        <menuitem id="emp_sub_group_service" name="Sub Group Pelayanan" sequence='22' parent="empoyee_group" action="action_emp_sub_group_service"/> 
    </data>
</odoo>
