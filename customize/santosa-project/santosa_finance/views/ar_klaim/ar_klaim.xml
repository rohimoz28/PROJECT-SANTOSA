<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- view tree -->
        <record id="ar_klaim_view_tree" model="ir.ui.view">
            <field name="name">ar.klaim.view.tree</field>
            <field name="model">ar.klaim</field>
            <field name="arch" type="xml">
                <tree string="AR Klaim" create="0">
                    <field name="currency_id" column_invisible="1" />
                    <field name="claim_date" optional="show" />
                    <field name="claim_number" optional="show" />
                    <field name="bill_number" optional="show" />
                    <field name="amt_claim_value" string="Total Invoice" optional="show" sum="Total Invoice"/>
                    <field name="claim_value" string="Total Klaim" optional="show" sum="Total Klaim"/>
                    <field name="payer" optional="show" />
                    <field name="state" widget="badge"
                        decoration-warning="state == 'partial_settled'"
                        decoration-success="state == 'close'"
                        decoration-info="state == 'in_process'"
                        decoration-danger="state == 'cancel'"
                        optional="show"
                    />
                </tree>
            </field>
        </record>
        <!-- action window -->
        <record id="ar_klaim_action" model="ir.actions.act_window">
            <field name="name">AR Klaim</field>
            <field name="res_model">ar.klaim</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- form view -->
        <record id="ar_klaim_form_view" model="ir.ui.view">
            <field name="name">ar.klaim.form.view</field>
            <field name="model">ar.klaim</field>
            <field name="arch" type="xml">
                <form string="Form AR Klaim">
                    <header>
                        <button string="Cancel" name="button_cancel" type="object" invisible="state in ['close','cancel']"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="in_process,partial_settled,close" />
                    </header>
                    <sheet>
                        <group name="header">
                            <group>                        
                                <field name="claim_date" />
                                <field name="claim_number" string= "No. Klaim"/>
                                <field name="bill_number" string= "No. Tagihan"/>
                            </group>
                            <group>
                                <field name="claim_value" />
                                <field name="payer" />
                                <field name="PopulatedTime" string="Populated Time"/>
                                <field name="guarantor" invisible="1"/>
                                <field name="currency_id" invisible="1" />
                            </group>
                        </group>
                        <field name="ar_klaim_ids">
                            <tree editable="bottom" create="0" class="o_horizontal_scroll">
                                <field name="currency_id" column_invisible="1" />
                                <field name="trx_number" column_invisible="1"/>
                                <field name="invoice_id" optional="show"/>
                                <field name="Invoice_number" optional="show" string="Invoice No"/>
                                <field name="billing_date" optional="show" string="Tanggal Invoice"/>
                                <field name="sep_number" optional="show" string="No SEP"/>
                                <field name="mr_number" optional="show"  string="No MR"/>
                                <field name="guarantor" optional="show"  string="Penjamin"/>
                                <field name="PopulatedTime" optional="show"  string="Populated Time"/>
                                <field name="invoice_amount" string="Amount Invoice" optional="show" sum="Total Invoice"/>
                                <field name="amt_klaim" string="AR Amount Klaim" optional="show" sum="Total Klaim"/>
                                <field name="diff_amt" string="Selisih" optional="show" sum="Total Selisih"/>
                                <field name="status_invoice" string="Status" widget="badge" decoration-success="status_invoice == 'Closed'" decoration-danger="status_invoice == 'Open'" on_change="1" field_id="pelayanan_0"/> 
                                <button 
                                    name="ar_klaim_invoice_detail_button" 
                                    type="object" 
                                    string="Detail"
                                    class="fa fa-eye"
                                />
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <menuitem
            id="ar_klaim_menu"
            name="AR Klaim"
            parent="santosa_finance.transaction_sanfi_root"
            sequence="20"
            action="ar_klaim_action"
        />
    </data>
</odoo>