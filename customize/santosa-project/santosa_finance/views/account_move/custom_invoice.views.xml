    <record id="view_move_form_custom" model="ir.ui.view">
        <field name="name">account.move.form.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Tambahkan Tab Baru -->
            <xpath expr="//page[@name='other_info']/group" position="before">
                <group string="Invoice Headers Custom" invisible="is_klaim">
                    <group>
                        <field name="status_sinkronisasi" readonly='1'/>
                        <field name="is_not_first_calculate" readonly='1'/>
                        <field name="odoo_transaction_no" readonly='1'/>
                        <field name="transaction_date" readonly='1'/>
                        <field name="invoice_no" invisible='1'/>
                        <field name="temp_invoice_no" string="Invoice No" readonly='1'/>
                        <field name="is_klaim" invisible='1' readonly='1'/>
                        <!-- <field name="company_id" invisible='1'/> -->

                        <field name="registration_date" readonly='1'/>
                        <field name="registration_no" readonly='1'/>
                        <field name="sales_point" readonly='1'/>
                        <field name="periode_perawatan_from" readonly='1'/>
                        <field name="periode_perawatan_to" readonly='1'/>
                        <field name="med_rec_number" readonly='1'/>
                        <field name="patient_name" readonly='1'/>
                        <field name="no_sep_ref_no" readonly='1'/>
                        <field name="penjamin_key" readonly='1'/>
                    </group>
                    <group>
                        <field name="total_invoice" readonly='1'/>
                        <field name="total_diskon" readonly='1'/>
                        <field name="unit_code" readonly='1'/>
                        <field name="unit_name" readonly='1'/>
                        <field name="penjamin_utama_code" readonly='1'/>
                        <field name="penjamin_utama_name" readonly='1'/>
                        <field name="penjamin_code" readonly='1'/>
                        <field name="penjamin_name_id" readonly='1'/>
                        <field name="amount_utama" readonly='1'/>
                        <field name="status_invoice" readonly='1'/>
                        <field name="status_transaksi" readonly='1'/>
                        <field name="periode_number" readonly='1'/>
                        <field name="periode_closing_date" readonly='1'/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//h1" position="after">
                <field name="pelayanan" nolabel="1" widget="radio" options="{'horizontal': true}" readonly="state not in ['draft']"/> 
            </xpath>
            <xpath expr="//group[@id='header_right_group']/label[@for='invoice_date']" position="replace"/>            
            <xpath expr="//field[@name='invoice_date']" position="before">
                <field name="transaction_date" string="Tanggal TRX" readonly="state != 'draft'"/>
                <label for="invoice_date_due" string="Due Date"/>
                <div class="d-flex" invisible="0" name="due_dates">
                    <field name="invoice_date_due" force_save="1" placeholder="Date" readonly="state != 'draft' or pelayanan == 'pelayanan'"/>
                     or
                    <field name="invoice_payment_term_id" context="{'example_date': invoice_date, 'example_amount': tax_totals['amount_total']}" placeholder="Payment Terms" options="{'no_quick_create':True,'no_create':True}" readonly="state in ['cancel', 'posted'] or pelayanan == 'pelayanan'"/>
                </div>
                
            </xpath>    

            <xpath expr="//group[@id='header_right_group']" position="after">
                <group id="header_left_claim_group" invisible="not is_klaim">
                        <field name="transaction_date" string= "Tanggal Klaim" readonly="state != 'draft'"/> 
                        <field name="name" string = "No. Klaim" readonly="state != 'draft'"/> 
                        <field name="no_bill" string = "No. Tagihan" readonly="state != 'draft'"/> 
                </group>
                <group id="header_right_claim_group" invisible="not is_klaim">
                        <field name="total_amt_claim" string = "Nilai Klaim" readonly='1' style="font-weight: bold;" />
                        <field name="partner_id" string = "Payor" readonly="state != 'draft'"/> 
                        <field name="populated_date" string = "Populate Date" readonly='1'/>
                </group>
            </xpath>
            <!-- Make 'header_left_group' and 'header_right_group' invisible when 'is_klaim' is True -->
            <xpath expr="//div[@class='oe_title']" position="attributes">
                <attribute name="invisible">is_klaim</attribute>
            </xpath>
            
            <xpath expr="//page[@name='other_info']" position="attributes">
                <attribute name="invisible">is_klaim</attribute>
            </xpath>
            
            <xpath expr="//group[@id='header_left_group']" position="attributes">
                <attribute name="invisible">is_klaim</attribute>
            </xpath>

            <xpath expr="//group[@id='header_right_group']" position="attributes">
                <attribute name="invisible">is_klaim</attribute>
            </xpath>
            
            <xpath expr="//field[@name='invoice_date']" position="replace">
                <field name="invoice_date" string="Tanggal Invoice" readonly="state not in ['draft']"/>
                <field name="invoice_no" readonly="state != 'draft' or pelayanan == 'pelayanan'" string="No. Invoice"/>
                <field name="status_invoice" readonly='1'/>
                <field name="total_amt_claim" string="Total Claim" readonly='1' sum="Total Klaim" invisible="not is_klaim"/>
            </xpath>
            <xpath expr="//label[@for='partner_id' and contains(@invisible, 'out_invoice')]" position="replace"/>
            <xpath expr="//label[@for='partner_id' and contains(@invisible, 'in_invoice')]" position="replace"/>
            <xpath expr="//group[@id='header_left_group']/div[@class='o_col']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>           
            
            <xpath expr="//div[@class='o_td_label']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>           
            
            <xpath expr="//div[@name='due_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>           
            
            <xpath expr="//label[@for='journal_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>           
            
            <xpath expr="//div[@name='journal_div']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//field[@name='partner_shipping_id']" position="before">
                <field name="sales_point" string="Sales Point" readonly="state != 'draft' or pelayanan == 'pelayanan'" invisible="pelayanan == 'non pelayanan'" />
                <field name="penjamin_name_id" string="Penjamin" readonly="state != 'draft' or pelayanan == 'pelayanan'" invisible="pelayanan == 'non pelayanan'"/>
                <field name="patient_name" string="Patient" readonly="state != 'draft' or pelayanan == 'pelayanan'" invisible="pelayanan == 'non pelayanan'"/>
                <field name="accounting_date_periode" readonly="1" string="Accounting Periode"/>
                <!-- <label for="journal_id"  invisible="context.get('default_journal_id') and context.get('move_type', 'entry') != 'entry'"/>
                <div name="journal_div" class="d-flex"  invisible="context.get('default_journal_id') and context.get('move_type', 'entry') != 'entry'">
                    <field name="journal_id" options="{'no_create': True, 'no_open': True}" readonly="posted_before"/>
                    <span class="oe_inline o_form_label mx-3"  invisible="move_type == 'entry'"> in </span>
                    <field name="currency_id"  invisible="move_type == 'entry'" readonly="state != 'draft'" options="{'no_create': True}" context="{'search_default_active': 1, 'search_default_inactive': 1}"/>
                </div> -->
                <field name="journal_ajp" readonly="state != 'draft' or pelayanan == 'pelayanan'" string="Jurnal References"/>
                <field name="journal_periode" readonly="state != 'draft' or pelayanan == 'pelayanan'"/>
                <field name="journal_type_id" options="{'no_create': True}" readonly="state != 'draft' or pelayanan == 'pelayanan'"/>
                <field name="journal_code" readonly="1"/>
                <field name="partner_id"  string="Customer" invisible="pelayanan == 'pelayanan'" readonly="state != 'draft' or pelayanan == 'pelayanan'" options="{'no_create': True}" />
                <field name="branch_id" readonly="state != 'draft' or pelayanan == 'pelayanan'"/>
            </xpath>
            <xpath expr="//notebook/page[@id='invoice_tab']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='invoice_date']" position="replace"/>

            <xpath expr="//tree/field[@name='name']" position="before">
                <field name="populated_date" string="Populat Date"/>
                <field name="invoice_date" string="Invoice Date"/>
                <field name="temp_invoice_no" string="Invoice No"/>
                <field name="transaction_no"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="sales_point" string="Sales Point"/>
            </xpath>
            <xpath expr="//tree/field[@name='state']" position="after">
                <field name="status_invoice" widget="badge" decoration-success="status_invoice == 'Closed'" decoration-danger="status_invoice == 'Open'"/>
                <field name="status_staging" optional='hide'/>
            </xpath>
            <field name="state" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <field name="amount_total_signed" position="attributes">
                <attribute name="string">Total Invoice</attribute>
            </field>
            <!-- <field name="invoice_date" position="attributes">
                <attribute name="string">Journal Date</attribute>
            </field> -->

        </field>
    </record>
        
            <record id="view_ar_klaim_inherit" model="ir.ui.view">
                <field name="name">account.move.filter.inherit</field>
                <field name="model">account.move</field>
                <field name="inherit_id" ref="account.view_account_invoice_filter"/>
                <field name="arch" type="xml">
                    <xpath expr="//filter[@name='to_check']" position="after">
                        <filter string="AR Klaim" name="filter_klaim" domain="[('is_klaim', '=', True)]"/>
                    </xpath>
                </field>
            </record>
        
        
        
        <record id="view_move_tree_klaim" model="ir.ui.view">
            <field name="name">account.move.tree.klaim</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree string="AR Klaim">
                    <field name="populated_date" string="Populate Date"/>
                    <field name="transaction_date" string="Tanggal Klaim"/>
                    <field name="name" string="No. Klaim"/>
                    <field name="no_bill" string="No Tagihan"/>
                    <field name="partner_id" string="Payor"/>
                    <field name="total_amt_claim" string="Nilai Klaim"/>
                    <field name="state" string="Status" widget="badge" decoration-success="state != 'draft'" decoration-danger="state == 'draft'"/>
                </tree>
            </field>
        </record>

        <!-- Action for AR Klaim -->
        <record id="action_ar_klaim2" model="ir.actions.act_window">
            <field name="name">AR Klaim</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_is_klaim': 1, 'search_default_filter_klaim': 1}</field>
            <field name="view_id" ref="view_move_tree_klaim"/>
        </record>
        
        <menuitem id="menu_ar_klaim2" name="AR Klaim" action="action_ar_klaim2" parent="santosa_finance.transaction_sanfi_root" sequence="20"/>


    </data>
</odoo>
