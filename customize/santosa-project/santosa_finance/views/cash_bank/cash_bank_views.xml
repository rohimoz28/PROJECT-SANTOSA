<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View cash.bank View Tree -->
    <record id="view_cash_bank_tree" model="ir.ui.view">
        <field name="name">view.cash.bank.tree</field>
        <field name="model">cash.bank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="no_trx"/>
                <field name="bank_type"/>
                <field name="journal_id"/>
                <field name="balance_start" widget='monetary'/>
                <field name="debit" string = "Total Bank Masuk" widget='monetary' sum="Total Debit"/>
                <!-- <field name="credit" widget='monetary' sum="Total Credit" column_invisible="1"/> -->
                <field name="total_ump" widget='monetary' sum="Total UMP"/>
                <field name="total_uar" widget='monetary' sum="Total UAR"/>
                <field name="total_alokasi" widget='monetary' sum="Total Alokasi"/>
                <field name="balance_end" widget='monetary'/>
                <field name="account_periode_name" column_invisible="1"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-muted ="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- View cash.bank form -->
    <record id="view_cash_bank_form" model="ir.ui.view">
        <field name="name">view.cash.bank.form</field>
        <field name="model">cash.bank</field>
        <field name="arch" type="xml">
            <form string="Cash Bank">
                <header>
                    <button name="act_open" invisible="state != 'draft'" string="Open" type="object" class="oe_highlight" data-hotkey="o"/>
                    <button name="act_close" invisible="state != 'open'" string="Post" type="object" class="oe_highlight" data-hotkey="c"/>
                    <button name="act_cancel" string="Cancel" type="object" invisible="state in ['cancelled', 'posted']" data-hotkey="x"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,posted" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="No Transaction"/>
                        <h1>
                            <field name="no_trx" placeholder="No..." readonly="state in ('posted','cancel')" />
                        </h1>
                        <field name="name" placeholder="Name..." invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="bank_type" string="Bank Type" widget="radio" options="{'horizontal': true}" readonly="state in ('posted','cancel')"/>
                            <field name="journal_id" domain="[('type', '=', 'bank')]" options="{'no_create': True,'no_create_edit': True}" readonly="state in ('posted','cancel')"/>
                            <field name="account_id" invisible="1"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="account_periode_id" options="{'no_create': True,'no_create_edit': True}"/>
                            <field name="currency_id" readonly="1"/>
                            <field name="balance_start" widget='monetary' readonly="state in ('posted','cancel')"/>
                            <field name="debit" string="Total Bank Masuk" widget='monetary' readonly="state in ('posted','cancel')"/>
                            <field name="balance_end" widget='monetary'/>
                            <field name="total_ump" string="Total UMP" widget='monetary' readonly="state in ('posted','cancel')"/>
                            <field name="total_uar" string="Total UAR" widget='monetary' readonly="state in ('posted','cancel')"/>
                            <field name="total_alokasi" string="Alokasi Piutang" widget='monetary' readonly="state in ('posted','cancel')"/>
                            <!-- <field name="credit" invisible = "1" widget='monetary'/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="line_ids" readonly="state in ('posted','cancel')">
                                <tree name="cash_bank_detail" string="Detail" editable="bottom" limit="30" class="o_horizontal_scroll">
                                    <field name="date" string="Date"/>
                                    <field name="name" string="No."/>
                                    <!-- <field name="account_move_id" string="TRX No." domain="[('is_klaim', '=', False)]" column_invicible="1"/> -->
                                    <field name="balance" string="Amount" sum="Total Balance" widget='monetary'/>
                                    <field name="is_uar" string="UAR ?" />
                                    <field name="partner_id" string="Customer/Penjamin" domain="[('is_supplier', '=', False)]" readonly="is_uar" options="{'no_create': True,'no_create_edit': True}"/>
                                    <field name="notes" string="Remark"/>
                                    <field name="company_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View cash.bank search -->
    <record id="view_cash_bank_search" model="ir.ui.view">
        <field name="name">view.cash.bank.search</field>
        <field name="model">cash.bank</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name" filter_domain="['|','|','|',('name','ilike',self),('account_periode_name','ilike',self),('juranal_id.name','ilike',self),('line_ids.partner_name','ilike',self)]"/>
                <field name="account_periode_name"/>
                <!-- <filter string="Name" name="filter_name" domain="['|','|','|',('name','ilike',self),('account_periode_name','ilike',self),('juranal_id.name','ilike',self),('line_ids.partner_name','ilike',self)]"/> -->
                <filter string="status" name="filter_state" domain="[('state', 'not in', ('draft','cancel'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Name" name="group_name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Accounting Periode" name="group_account_periode_id" domain="[]" context="{'group_by':'account_periode_id'}"/>
                    <filter string="Bank Type" name="group_bank_type" domain="[]" context="{'group_by':'bank_type'}"/>
                    <filter string="Status" name="group_state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for cash.bank -->
    <record id="action_cash_bank" model="ir.actions.act_window">
        <field name="name">Cash Bank</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.bank</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_state': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    There are no cash bank entries yet. Click to add one.
            </p>
        </field>
    </record>

    <!-- Menu item for cash.bank -->
    <menuitem id="menu_kasbank" name="Kas-Bank Masuk" action="action_cash_bank" parent="santosa_finance.transaction_sanfi_root" sequence="23"/>


</odoo>
