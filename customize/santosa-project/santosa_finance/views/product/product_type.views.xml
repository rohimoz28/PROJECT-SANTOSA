<odoo>
    <data>

        <record id="santosa_finance_product_type_form" model="ir.ui.view">
            <field name="name">Product Type</field>
            <field name="model">santosa_finance.product_type</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                            <field name="element_type_key" />
                            <field name="element_type_name" />
                            <field name="element_type_description" />
                            <field name="item_group_key" />
                            <field name="versi" />
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="santosa_finance_product_type_tree" model="ir.ui.view">
            <field name="name">Product Type</field>
            <field name="model">santosa_finance.product_type</field>
            <field name="arch" type="xml">

                <!-- default_order='tahun desc' -->
                <tree limit="20">
                    <field name="element_type_key" />
                            <field name="element_type_name" />
                            <field name="element_type_description" />
                            <field name="item_group_key" />
                            <field name="versi" />
                            
                </tree>
            </field>
        </record>

        <record id="santosa_finance_product_type_action" model="ir.actions.act_window">
            <field name="name">Product Type</field>
            <field name="res_model">santosa_finance.product_type</field>
            <field name="view_mode">tree,form,graph,pivot</field>

            <field name="domain"></field>

        </record>
       
        <menuitem id="product_type_data" name="Product Type" sequence='99' parent="stock.menu_stock_inventory_control" action="santosa_finance_product_type_action"/>

    </data>
</odoo>