<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for Offset Type -->
        <record id="view_offset_type_form" model="ir.ui.view">
            <field name="name">offset.type.form</field>
            <field name="model">offset.type</field>
            <field name="arch" type="xml">
                <form string="Offset" class="o_offset_type_form">
                    <div class="oe_title">
                        <h1>
                            <field name="name" 
                            required="1"
                            placeholder="Name Offset"/>
                        </h1>
                        <h3>
                            <field name="code" 
                            required="1"
                            placeholder="Code Offset"/>
                        </h3>
                    </div>
                    <group>
                        <field name="type" 
                        required="1"
                        placeholder="Type Offset"/>
                    </group>
                    <!-- Assuming offset_acc_ids is a one2many field -->
                    <field name="offset_acc_ids">
                        <tree string="List Account" editable="bottom" >
                            <field name="account_id"  options="{'no_create': True,'no_edit': True}"/>
                            <field name="code" placeholder="Code Accounting..."/>
                            <field name="name" placeholder="Name Accounting..."/>
                            <field name="account_type" placeholder="Type Accounting..."/>
                            <!-- You can add more fields here if needed -->
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <!-- Tree View for Offset Type -->
        <record id="view_offset_type_tree" model="ir.ui.view">
            <field name="name">offset.type.tree</field>
            <field name="model">offset.type</field>
            <field name="arch" type="xml">
                <tree string="Offset">
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <!-- Action for Offset Configuration -->
        <record id="action_offset_configuration" model="ir.actions.act_window">
            <field name="name">Offset Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">offset.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
              <p>
                You will find here all orders that are ready to be invoiced.
              </p>
              <p>
                You can select all orders and invoice them in batch, or check
                every order and invoice them one by one.
              </p>
            </field>
        </record>

        <!-- Menu Item for Offset Configuration -->
        <menuitem id="offset_configuration" name="Offset Configuration" sequence="15" parent="account.account_account_menu" action="action_offset_configuration"/>
    </data>
</odoo>
