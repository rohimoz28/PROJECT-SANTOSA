<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View santosa_finance.akun_kontrol_honor_dokter View Tree -->
    <record id="view_santosa_finance_akun_kontrol_honor_dokter_tree" model="ir.ui.view">
        <field name="name">view.santosa_finance.akun_kontrol_honor_dokter.tree</field>
        <field name="model">santosa_finance.akun_kontrol_honor_dokter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="idTrx" column_invisible="1"/>
                <field name="TrxDate"/>
                <field name="TrxNo"/>
                <field name="Invoice_date"/>
                <field name="Invoice_No"/>
                <field name="PenjaminName"/>
                <field name="PiutangUsaha"/>
                <field name="NoTrxKlaim"/>
                <field name="PiutangKlaim"/>
                <field name="TolakanKlaim"/>
                <field name="FeeDokter"/>
                <field name="BebanBiaya"/>
                <field name="invoice_id" column_invisible="1"/>
                <field name="partner_id" column_invisible="1"/>
                <button name="open_view_invoice" type="object" string="View Invoice" class="fa fa-eye"/>
            </tree>
        </field>
    </record>

    <!-- View santosa_finance.akun_kontrol_honor_dokter form -->
    <record id="view_santosa_finance_akun_kontrol_honor_dokter_form" model="ir.ui.view">
        <field name="name">view.santosa_finance.akun_kontrol_honor_dokter.form</field>
        <field name="model">santosa_finance.akun_kontrol_honor_dokter</field>
        <field name="arch" type="xml">
            <form string="Santosa_finance Akun_kontrol_honor_dokter">
                <sheet>
                    <group>
                        <group>
                            <field name="idTrx" invisible="1"/>
                            <field name="TrxDate"/>
                            <field name="TrxNo"/>
                            <field name="Invoice_date"/>
                            <field name="Invoice_No"/>
                            <field name="NoTrxKlaim"/>
                        </group>
                        <group>
                            <field name="PiutangKlaim"/>
                            <field name="TolakanKlaim"/>
                            <field name="FeeDokter"/>
                            <field name="BebanBiaya"/>
                            <field name="invoice_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                        </group>
                    </group>
                    <!-- Optional: Show Invoice Button -->
                    <button name="open_view_invoice" type="object" string="Lihat Invoice" class="btn-primary"/>
                </sheet>
            </form>
        </field>
    </record>    <!-- Search View -->

    <record id="view_santosa_finance_akun_kontrol_honor_dokter_search" model="ir.ui.view">
        <field name="name">view.santosa_finance.akun_kontrol_honor_dokter.search</field>
        <field name="model">santosa_finance.akun_kontrol_honor_dokter</field>
        <field name="arch" type="xml">
            <search>
                <field name="TrxNo"/>
                <group expand="1" string="Group By">
                    <filter string="Nomor TRX" name="TrxNo" domain="[]" context="{'group_by':'TrxNo'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_santosa_finance_akun_kontrol_honor_dokter" model="ir.actions.act_window">
        <field name="name">Kontrol Honor Dokter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">santosa_finance.akun_kontrol_honor_dokter</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Tidak ada data. Klik di sini untuk menambahkan Akun Kontrol Honor Dokter baru.
            </p>
        </field>
    </record>
    <menuitem id="control_fee_doctor" name="Akun Kontrol Honor Dokter" sequence='15' parent="account.menu_finance_reports" action="action_santosa_finance_akun_kontrol_honor_dokter"/>
</odoo>
