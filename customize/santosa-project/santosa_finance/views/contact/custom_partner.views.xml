                <group>
                    <!-- <field name="is_dokter_mitra" string="Dokter Mitra?" invisible="context.get('default_is_dokter_mitra', False) != 1"/> -->   <!-- dinonaktifkan karena user sudah diarahkan via menu selection -->
                    <field name="is_dokter_mitra" string="Dokter Mitra?" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>

