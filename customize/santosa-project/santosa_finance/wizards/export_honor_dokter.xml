<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Export Honor Dokter -->
    <record id="view_export_honor_dokter_form" model="ir.ui.view">
        <field name="name">export.honor.dokter.form</field>
        <field name="model">export.honor.dokter</field>
        <field name="arch" type="xml">
            <form string="Export Honor Dokter">
                <sheet>
                    <group>
                        <field name="allowed_penjamin_ids" string="Penjamins" invisible="1"/>
                        <field name="penjamin_id" string="Penjamin" options="{'no_create': True,'no_create_edit': True}"/>
                        <label for="penjamin_id" string="Periode" />
                        <div class="o_row">
                            <field name="date_start"/> s/d
                            <field name="date_end"/>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button name="action_export_excel" string="Export to XLS" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
         
    <record id="action_export_honor_dokter_wizard" model="ir.actions.act_window">
        <field name="name">Akun Kontrol Honor Dokter</field>
        <field name="res_model">export.honor.dokter</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_export_honor_dokter_form"/>
        <field name="target">new</field>
        <field name="binding_type">action</field>
        <!-- <field name="binding_model_id" search="[('model', '=', 'santosa_finance.akun_kontrol_honor_dokter')]"/> -->
    </record>

</odoo>
