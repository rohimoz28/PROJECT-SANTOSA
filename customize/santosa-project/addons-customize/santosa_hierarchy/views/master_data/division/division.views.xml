<odoo>
    <data>

        <record id="san_hrms_division_form" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                           
                            <field name="division_code" required='1'/>
                            <field name="name" />
                            <field name="branch_id"/>
                            <field name="department_id"/>
                            
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="san_hrms_division_tree" model="ir.ui.view">
            <field name="name">Division</field>
            <field name="model">sanhrms.division</field>
            <field name="arch" type="xml">

                <tree limit="20">
                    <field name="division_code" required='1'/>
                    <field name="name" />
                    <field name="branch_id"/>
                    <field name="department_id"/>
                            
                </tree>
            </field>
        </record>
        

        <record id="san_hrms_division_action" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="res_model">sanhrms.division</field>
            <field name="view_mode">tree,form,graph,pivot</field>

            <field name="domain"></field>

        </record>
       
        <menuitem id="division_date" name="Division" sequence='15' parent="santosa_hierarchy.hierarchy_id" action="san_hrms_division_action"/>

    </data>
</odoo>