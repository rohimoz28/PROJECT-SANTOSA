<odoo>
    <data>

        <record id="santosa_finance_recurring_setup_details_form" model="ir.ui.view">
            <field name="name">Recurring Setup Details</field>
            <field name="model">santosa_finance.recurring_setup_details</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                           
                            <field name="recurring_id" />
                            <field name="coa_id" />
                            <field name="coa_description" />
                            <field name="debit_or_credit" />
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="santosa_finance_recurring_setup_details_tree" model="ir.ui.view">
            <field name="name">Recurring Setup Details</field>
            <field name="model">santosa_finance.recurring_setup_details</field>
            <field name="arch" type="xml">

                <tree limit="20">
                    <field name="recurring_id" />
                            <field name="coa_id" />
                            <field name="coa_description" />
                            <field name="debit_or_credit" />
                            
                </tree>
            </field>
        </record>

        <record id="santosa_finance_recurring_setup_details_action" model="ir.actions.act_window">
            <field name="name">Recurring Setup Details</field>
            <field name="res_model">santosa_finance.recurring_setup_details</field>
            <field name="view_mode">tree,form,graph,pivot</field>

            <field name="domain"></field>

        </record>
       
        <menuitem id="recurring_setup_details_data" name="Recurring Setup Details" sequence='15' parent="santosa_finance.recurring_root" action="santosa_finance_recurring_setup_details_action"/>

    </data>
</odoo>