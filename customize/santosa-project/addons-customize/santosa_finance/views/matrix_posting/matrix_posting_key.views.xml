<odoo>
    <data>

        <record id="santosa_finance_matrix_posting_key_form" model="ir.ui.view">
            <field name="name">Matrix Posting Key</field>
            <field name="model">santosa_finance.matrix_posting_key</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                           
                            <field name="posting_key" />
                            <field name="posting_key_name" />
                            <field name="description" />
                            <field name="doc_name" />
                            <field name="doc_ref_number" />
                            <field name="idc" />
                            <field name="valid_from" />
                            <field name="tipe" />
                            
                            
                            
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="santosa_finance_matrix_posting_key_tree" model="ir.ui.view">
            <field name="name">Matrix Posting Key</field>
            <field name="model">santosa_finance.matrix_posting_key</field>
            <field name="arch" type="xml">

                <!-- default_order='tahun desc' -->
                <tree limit="20">
                    <field name="posting_key" />
                            <field name="posting_key_name" />
                            <field name="description" />
                            <field name="doc_name" />
                            <field name="doc_ref_number" />
                            <field name="idc" />
                            <field name="valid_from" />
                            <field name="tipe" />
                            
                </tree>
            </field>
        </record>

        <record id="santosa_finance_matrix_posting_key_action" model="ir.actions.act_window">
            <field name="name">Matrix Posting Key</field>
            <field name="res_model">santosa_finance.matrix_posting_key</field>
            <field name="view_mode">tree,form,graph,pivot</field>

            <field name="domain"></field>

        </record>
       
        <menuitem id="matrix_posting_key_data" name="Matrix Posting Key" sequence='15' parent="santosa_finance.matrix_posting_root" action="santosa_finance_matrix_posting_key_action"/>

    </data>
</odoo>