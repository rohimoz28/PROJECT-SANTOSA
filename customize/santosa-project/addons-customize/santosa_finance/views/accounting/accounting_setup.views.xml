<odoo>
    <data>

        <record id="santosa_finance_accounting_setup_form" model="ir.ui.view">
            <field name="name">Accounting Setup</field>
            <field name="model">santosa_finance.accounting_setup</field>
            <field name="arch" type="xml">
                <form multi_edit="1">
                   
                    <sheet>
                        <group>
                           
                            <field name="accounting_period_from" />
                            <field name="accounting_period_to" />
                            <field name="period_no" />
                            <field name="fiscal_period_from" />
                            <field name="fiscal_period_to" />
                            <field name="fiscal_period_no" />
                        </group>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="santosa_finance_accounting_setup_tree" model="ir.ui.view">
            <field name="name">Accounting Setup</field>
            <field name="model">santosa_finance.accounting_setup</field>
            <field name="arch" type="xml">

                <!-- default_order='tahun desc' -->
                <tree limit="20">
                    <field name="accounting_period_from" />
                            <field name="accounting_period_to" />
                            <field name="period_no" />
                            <field name="fiscal_period_from" />
                            <field name="fiscal_period_to" />
                            <field name="fiscal_period_no" />
                            
                </tree>
            </field>
        </record>
        
        <record id="santosa_finance_accounting_setup_action" model="ir.actions.act_window">
            <field name="name">Accounting Setup</field>
            <field name="res_model">santosa_finance.accounting_setup</field>
            <field name="view_mode">tree,form,graph,pivot</field>

            <field name="domain"></field>

        </record>
       
        <menuitem id="accounting_setup_data" name="Accounting Setup" sequence='14' parent="account.account_account_menu" action="santosa_finance_accounting_setup_action"/>

    </data>
</odoo>