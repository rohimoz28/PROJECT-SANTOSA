<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_employment_log_tree" model="ir.ui.view">
            <field name="name">hr.employment.log.tree</field>
            <field name="model">hr.employment.log</field>
            <field name="arch" type="xml">
                <tree string="HR Mutation" edit="0" create="0" delete="0" class="o_tree_table">
                    <field name="service_type" string="Tipe Transaksi" optional="show"/>
                    <field name="start_date" string="Tanggal Mulai" optional="show"/>
                    <field name="end_date" string="Tanggal Akhir" optional="show"/>
                    <field name="area" optional="show"/>
                    <field name="bisnis_unit" string="Unit Bisnis" optional="show"/>
                    <field name="directorate_id" optional="show"/>
                    <field name="hrms_department_id" optional="show"/>
                    <field name="division_id" optional="show"/>
                    <field name="parent_id" optional="show"/>
                    <field name="nik" optional="show"/>
                    <field name="job_title" optional="show"/>
                    <field name="job_status" optional="show"/>
                    <field name="emp_status_id" optional="show"/>
                    <field name="masa_jabatan" optional="show"/>
                    <field name="employee_group1" optional="show"/>
                    <field name="trx_number" optional="show"/>
                    <field name="doc_number" optional="show"/>
                    <field name="end_contract" string="Dipanggil Kembali" optional="show"/>
                    <button name="ambil_view" type="object" string="Open View" class="fa fa-eye"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employment_log_form" model="ir.ui.view">
            <field name="name">hr.employment.log.form</field>
            <field name="model">hr.employment.log</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="HR Employment Log">
<!--                 <header>-->
<!--                    <button string="Approve" name="button_approve" type="object" class="oe_highlight" invisible="state in ['approved']"/>-->
<!--                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>-->
<!--                </header>-->
                    <sheet>
                        <group name="emp_det" string="Detail Karyawan">
                            <group>
                                <field name="area"/>
                                <field name="bisnis_unit"/>
                                <field name="directorate_id"/>
                                <field name="hrms_department_id"/>
                                <field name="division_id"/>
                                <field name="parent_id"/>
                                <field name="masa_jabatan"/>
                                <field name="employee_group1"/>
                            </group>
                            <group>
                                <field name="service_type"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="nik"/>
                                <field name="job_title"/>
                                <field name="job_status"/>
                                <field name="contract_id"/>
                                <field name="emp_status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_employeement_log_search" model="ir.ui.view">
            <field name="name">employement.log.search</field>
            <field name="model">hr.employment.log</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Employement Log">
                    <field name="service_type"/>
                </search>
            </field>
        </record>
        <record id="open_view_employement_tree" model="ir.actions.act_window">
            <field name="name">Employement Log</field>
            <field name="res_model">hr.employment.log</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_employment_log_tree"/>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="view_employeement_log_search"/>
        </record>

        <record id="open_view_employee_mutation_list" model="ir.actions.act_window">
            <field name="name">Employees Mutation</field>
            <field name="res_model">hr.employment.log</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_employeement_log_search"/>
        </record>
<!--        <menuitem id="menu_hr_mutation"-->
<!--                  name="Mutation"-->
<!--                  parent="hr.menu_hr_employee_payroll"-->
<!--                  sequence="5"-->
<!--                  action="open_view_employee_mutation_tree"/>-->

    </data>
</openerp>