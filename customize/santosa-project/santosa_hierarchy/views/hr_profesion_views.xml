<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr_profesion View Tree -->
    <record id="view_hr_profesion_tree" model="ir.ui.view">
        <field name="name">view.hr_profesion.tree</field>
        <field name="model">hr.profesion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View hr_profesion form -->
    <record id="view_hr_profesion_form" model="ir.ui.view">
        <field name="name">view.hr_profesion.form</field>
        <field name="model">hr.profesion</field>
        <field name="arch" type="xml">
            <form string="Hr_profesion">
                <sheet>
                    <div class="oe_title">
                        <field name="type" widget="radio" options="{'horizontal': true}"/>
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="Code..."/>
                        </h3>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_profesion_search" model="ir.ui.view">
        <field name="name">view.hr_profesion.search</field>
        <field name="model">hr.profesion</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Type" name="type" domain="[]" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>

